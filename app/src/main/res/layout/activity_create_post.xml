<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo bài viết mới"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link hình ảnh (URL):"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dán liên kết ảnh vào đây..."
            android:inputType="textUri"
            android:textColorHint="@color/text_gray"
            android:textColor="@color/white"
            android:background="@drawable/bg_input_dark"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề:"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etPostTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tiêu đề bài viết"
            android:textColorHint="@color/text_gray"
            android:textColor="@color/white"
            android:background="@drawable/bg_input_dark"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục:"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinnerCategories"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_dark"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung:"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etPostContent"
            android:layout_width="match_parent"
            android:layout_height="441dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_input_dark"
            android:gravity="top|start"
            android:hint="Nội dung chi tiết..."
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/text_gray" />

        <Button
            android:id="@+id/btnSubmitPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng bài"
            android:backgroundTint="@color/blue_primary"
            android:textStyle="bold"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>